<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="boundary.PantallaPrincipalController">

    <top>
        <Label text="Gestión de Casos en Desuso"
               style="-fx-font-size: 18px; -fx-padding: 10px;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TableView fx:id="tablaCasos" prefHeight="300" prefWidth="500">
            <columns>
                <TableColumn fx:id="columnaId" text="ID" prefWidth="100"/>
                <TableColumn fx:id="columnaDescripcion" text="Descripción" prefWidth="250"/>
                <TableColumn fx:id="columnaEstado" text="Estado" prefWidth="150"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Ver Casos" onAction="#verCasos"/>
            <Button text="Registrar Caso" onAction="#registrarCaso"/>
            <Button text="Actualizar Estado" onAction="#actualizarEstado"/>
            <Button text="Generar Reporte" onAction="#generarReporte"/>
        </HBox>
    </bottom>

</BorderPane>
